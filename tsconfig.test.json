{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom",
      "@testing-library/jest-dom/matchers"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "jest.setup.ts",
    "client/src/test-utils.d.ts"
  ]
} 