{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@components/*": ["./client/src/components/*"],
      "@hooks/*": ["./client/src/hooks/*"],
      "@contexts/*": ["./client/src/contexts/*"],
      "@ui/*": ["./client/src/components/ui/*"],
      "@shared/*": ["./shared/*"]
    },
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "client/src/components/**/*.ts",
    "client/src/components/**/*.tsx",
    "client/src/contexts/**/*.ts",
    "client/src/contexts/**/*.tsx",
    "client/src/hooks/**/*.ts",
    "client/src/hooks/**/*.tsx",
    "client/src/lib/**/*.ts",
    "client/src/lib/**/*.tsx",
    "client/src/pages/**/*.ts",
    "client/src/pages/**/*.tsx",
    "client/src/services/**/*.ts",
    "client/src/services/**/*.tsx",
    "client/src/types/**/*.ts",
    "client/src/types/**/*.tsx",
    "client/src/utils/**/*.ts",
    "client/src/utils/**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "jest.setup.ts"
  ],
  "exclude": [
    "node_modules",
    "client/src/lib/firebase.ts",
    "**/firebase.ts",
    "dist",
    "build",
    "coverage"
  ]
}
